<p id="notice"><%= notice %></p>

<h1>Relevances</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @relevances.each do |relevance| %>
      <tr>
        <td><%= relevance.description %></td>
        <td><%= link_to 'Show', relevance %></td>
        <td><%= link_to 'Edit', edit_relevance_path(relevance) %></td>
        <td><%= link_to 'Destroy', relevance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Relevance', new_relevance_path %>
