<style>

table, td, tr, th{
  border:solid 1px #ccc;
  border-collapse: collapse;
}
td, th{
  padding:10px  ;
}
</style>

<p id="notice"><%= notice %></p>

<h1>Wishes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Initdate</th>
      <th>Enddate</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @wishes.each do |wish| %>
      <tr>
        <td><%= wish.title %></td>
        <td><%= wish.description %></td>
        <td><%= wish.initDate.strftime('%d/%m/%Y') %></td>
        <td><%= wish.endDate.strftime('%d/%m/%Y') %></td>
        <td><a href="/wish_progresses/new?wish_id=<%= wish.id%>">Meus wishes</a></td>
        <td><%= link_to 'Show', wish %></td>
        <td><%= link_to 'Edit', edit_wish_path(wish) %></td>
        <td><%= link_to 'Destroy', wish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

      <tr>
        <td colspan="9"><p>Progress</p></td>
      </tr>
      <% wish.wish_progress.each do |wish_progress| %>
      <tr>
          <td><%=wish_progress.description%></td>
          <td colspan="7"><%=wish_progress.dataRegistro.strftime('%d/%m/%Y')%></td>
      </tr>
      <% end %>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wish', new_wish_path %>
