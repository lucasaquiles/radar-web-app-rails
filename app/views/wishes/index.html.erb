
<ul class="nav">
  <li class="nav-item">
   <%= link_to 'My progress', wish_progresses_path, :class => 'nav-link active' %>
   <%= link_to 'My Goals', goals_path, :class => 'nav-link active' %>
  </li>
</ul>

<p id="notice"><%= notice %></p>

<h1>Wishes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Init at</th>
      <th>End at</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @wishes.each do |wish| %>
      <tr>
        <td><%= link_to wish.title, wish %></td>
        <td><%= wish.description %></td>
        <td><%= wish.initDate.strftime('%d/%m/%Y') %></td>
        <td><%= wish.endDate.strftime('%d/%m/%Y') %></td>
        <td><a href="/wish_progresses/new?wish_id=<%= wish.id%>">Add progresso 
        <span class="badge badge-primary badge-pill"> <%=wish.goal.length %></span></a></td>
        <td><%= link_to 'Show', wish %><span class="fi-plus"></span></td>
        <td><%= link_to 'Edit', edit_wish_path(wish) %></td>
        <td><%= link_to 'Destroy', wish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

     
    <% end %>
  </tbody>
</table>

<br>

<div class="row" style="float:right;">
<%= link_to 'Criar novo Wish ', new_wish_path, :class=> 'btn btn-primary', :style=>"float:right" %>
</div>